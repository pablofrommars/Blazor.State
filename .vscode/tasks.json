{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "dotnet: pack",
			"command": "dotnet",
			"type": "process",
			"args": [
				"pack",
				"--configuration",
				"release",
				"--output",
				"${workspaceFolder}/packages",
				"${workspaceFolder}/src/Blazor.State/Blazor.State.csproj"
			],
			"problemMatcher": "$msCompile",
			"presentation": {
				"echo": true,
				"revealProblems": "onProblem",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": false,
				"close": true
			}
		},
		{
			"label": "nuget: push",
			"command": "dotnet",
			"type": "process",
			"args": [
				"nuget",
				"push",
				"${input:package}",
				"--skip-duplicate",
				"--api-key",
				"${env:NUGET_API_KEY}",
				"--source",
				"https://api.nuget.org/v3/index.json"
			],
			"options": {
				"cwd": "packages"
			},
			"problemMatcher": "$msCompile"
		},
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/samples/Blazor.State.Demo/Blazor.State.Demo.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "publish",
			"command": "dotnet",
			"type": "process",
			"args": [
				"publish",
				"${workspaceFolder}/samples/Blazor.State.Demo/Blazor.State.Demo.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "watch",
			"command": "dotnet",
			"type": "process",
			"args": [
				"watch",
				"run",
				"--project",
				"${workspaceFolder}/samples/Blazor.State.Demo/Blazor.State.Demo.csproj"
			],
			"problemMatcher": "$msCompile"
		}
	],
	"inputs": [
		{
			"id": "package",
			"type": "promptString",
			"description": "Package file(s)",
			"default": "*.nupkg"
		}
	]
}